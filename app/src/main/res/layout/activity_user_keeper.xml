<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:translationY="50dp"
    tools:context=".UserPage">

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/client_Btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/client_Btn_add"
            android:layout_width="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="#B6B6B6"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:text="I want to become a client" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvtop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:text="Requests"
        android:textAlignment="center"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/client_Btn_layout" />

    <TextView
        android:id="@+id/tvtopx"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:text="No Requests"
        android:layout_marginVertical="32dp"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/tvtop" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRequests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvtop"
        tools:listitem="@layout/request_item" />
</androidx.constraintlayout.widget.ConstraintLayout>

